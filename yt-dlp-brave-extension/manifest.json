{
  "manifest_version": 3,
  "name": "PipeDL for yt-dlp",
  "description": "Brave extension UI for controlling a local yt-dlp backend.",
  "version": "1.0.0",
  "permissions": ["storage", "alarms", "tabs", "activeTab", "notifications", "cookies"],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "https://*.youtube.com/*",
    "https://youtube.com/*",
    "https://*.google.com/*",
    "https://google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["youtube-button.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PipeDL",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
